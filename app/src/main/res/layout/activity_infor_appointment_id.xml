<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InforAppointmentIdActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleMarginStart="80dp">
        <ImageView
            android:id="@+id/btn_back_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_back_real">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thông tin chi tiết"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_stroke"
        >
        <EditText
            android:id="@+id/doctoredt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Họ và Tên"
            android:paddingStart="50dp"
            android:paddingEnd="20dp"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="1"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/baseline_person_24"
            android:adjustViewBounds="true"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_stroke"
        >
        <EditText
            android:id="@+id/dateedt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Ngày khám"
            android:paddingStart="50dp"
            android:paddingEnd="20dp"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="1"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/baseline_calendar_month_24"
            android:adjustViewBounds="true"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_stroke"
        >
        <EditText
            android:id="@+id/timeedt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Thời gian"
            android:paddingStart="50dp"
            android:paddingEnd="20dp"
            android:textSize="16sp"
            android:focusable="false"
            android:inputType="none"
            android:maxLines="1"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/baseline_access_time_24"
            android:adjustViewBounds="true"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_stroke"
        >
        <EditText
            android:id="@+id/noteedt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Ghi chú"
            android:paddingStart="50dp"
            android:paddingEnd="20dp"
            android:textSize="16sp"
            android:maxLines="1"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_sticky_note_2_24"
            />
    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Cập nhật"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_backl_primary"
        android:textColor="@color/white"
        />


</LinearLayout>