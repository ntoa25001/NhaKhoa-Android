<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#B2EBF2"
    android:layout_gravity="center_vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        >
        <Button
            android:id="@+id/btn_ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:text="Đặt lịch theo ngày"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <Button
            android:id="@+id/btn_bacsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:text="Đặt lịch theo bác sĩ"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <Button
            android:id="@+id/btn_back_dialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_image_oval"
            android:layout_gravity="center_horizontal"
            android:drawableBottom="@drawable/baseline_keyboard_arrow_down_24"
           android:padding="10dp"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>